{
  "name": "rizkicitra",
  "version": "1.0.0",
  "private": true,
  "description": "My Personal Website, build with React, Next.js, Strapi and Tailwind CSS",
  "scripts": {
    "dev": "yarn cache-clean && next dev",
    "build": "next build",
    "start": "next start -p 5000",
    "cache-clean": "rm -rf ./.next",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "postinstall": "husky install",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "format": "prettier --config ./.prettierrc.json -w ./src/**/*.{tsx,ts}",
    "postbuild": "next-sitemap --config next-sitemap.js"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.0",
    "axios": "^0.24.0",
    "clsx": "^1.1.1",
    "framer-motion": "^5.3.0",
    "mdx-prism": "^0.3.4",
    "next": "^12.0.7",
    "next-mdx-remote": "^3.0.8",
    "next-pwa": "^5.4.4",
    "next-seo": "^4.28.1",
    "next-themes": "^0.0.15",
    "preact": "^10.6.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-intersection-observer": "^8.32.2",
    "reading-time": "^1.5.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "@types/node": "17.0.5",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "autoprefixer": "^10.4.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.5.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.0.2",
    "next-sitemap": "^1.6.203",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "tailwindcss": "^3.0.1",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rizkimcitra/rizkicitra.git"
  },
  "author": "Rizki Maulana Citra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rizkimcitra/rizkicitra/issues"
  },
  "homepage": "https://github.com/rizkimcitra/rizkicitra#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
